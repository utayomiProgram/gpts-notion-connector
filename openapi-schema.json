{
  "openapi": "3.1.0",
  "info": {
    "title": "Notion API - Generic Article Creation, Update, Deletion & Retrieval",
    "version": "v1.4.4"
  },
  "servers": [
    {
      "url": "Cloudflare WorkersのURLを入力"
    }
  ],
  "paths": {
"/v1/pages": {
  "post": {
    "summary": "データベースに記事を追加します。",
    "operationId": "createArticle",
    "tags": ["Pages"],
    "x-openai-isConsequential": false,
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "type": "object",
            "properties": {
              "parent": {
                "type": "object",
                "properties": {
                  "database_id": {
                    "type": "string"
                  }
                },
                "required": ["database_id"]
              },
              "properties": {
                "type": "object",
                "properties": {
                  "名前": {
                    "type": "object",
                    "properties": {
                      "title": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "text": {
                              "type": "object",
                              "properties": {
                                "content": { "type": "string" }
                              },
                              "required": ["content"]
                            }
                          },
                          "required": ["text"]
                        }
                      }
                    },
                    "required": ["title"]
                  }
                },
                "required": ["名前"],
                "additionalProperties": true
              }
            },
            "required": ["parent", "properties"]
          }
        }
      }
    }
  }
}
,
    "/v1/blocks/{block_id}/children": {
  "get": {
    "summary": "指定したブロックの子ブロック一覧を取得します。",
    "operationId": "getChildBlocksInGeneric",
    "tags": ["Blocks"],
    "x-openai-isConsequential": false,
    "parameters": [
      {
        "name": "block_id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "子ブロック一覧を返します。",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {},
              "additionalProperties": true
            }
          }
        }
      }
    },
    "security": [
      {
        "apiKey": []
      }
    ]
  },
  "patch": {
    "summary": "指定したブロックに子ブロックを追加します（展開済みパス専用）。",
    "description": "この操作では block_id を必ず URL パスに直接展開してください。例：`/v1/blocks/abc123/children`。params や body に block_id を含めるとエラーになります。",
    "operationId": "appendChildrenToBlockExpanded",
    "tags": ["Blocks"],
"x-openai-isConsequential": false,
    "parameters": [
      {
        "name": "block_id",
        "in": "path",
        "required": true,
        "schema": {
          "type": "string"
        },
        "description": "この値は URL パスに埋め込まれる必要があります。例：`/v1/blocks/abc123/children`。params や body に含めてはいけません。"
      }
    ],
    "requestBody": {
      "required": true,
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/AppendPageContentRequest"
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "子ブロックが正常に追加されました。"
      }
    },
    "security": [
      {
        "apiKey": []
      }
    ]
  }
}
