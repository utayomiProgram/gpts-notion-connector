                      "page_id": {
                        "type": "string"
                      },
                      "block_id": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "type"
                    ]
                  },
                  "properties": {
                    "type": "object",
                    "properties": {},
                    "additionalProperties": true
                  }
                },
                "required": [
                  "properties"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "プロパティが正常に更新されました。"
          }
        },
        "security": [
          {
            "apiKey": []
          }
        ]
      },
      "get": {
        "summary": "指定したページを取得します。",
