    "/v1/databases/{database_id}/query": {
      "post": {
        "summary": "データベース内の全記事を取得します（ページネーション対応）。",
        "operationId": "getAllArticlesFromGeneric",
        "tags": [
          "Databases"
        ],
        "x-openai-isConsequential": false,
        "parameters": [
          {
            "name": "database_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "start_cursor": {
                    "type": "string",
                    "description": "続きの取得に使用されるカーソル"
                  },
                  "page_size": {
                    "type": "integer",
                    "description": "1回のリクエストで取得する件数（上限100）",
                    "default": 10,
                    "maximum": 100
                  },
                  "filter": {
                    "anyOf": [
                      {
                        "type": "object",
                        "additionalProperties": true
                      },
                      {
                        "type": "null"
                      }
                    ],
                    "description": "フィルター条件（任意）"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "全記事のクエリ結果を返します（ページネーションあり）。",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "next_cursor": {
                      "type": "string"
                    },
                    "has_more": {
                      "type": "boolean"
                    }
                  }
                }
              }
            }
          }
        },
        "security": [
          {
            "apiKey": []
          }
        ]
      }
    },
    "/v1/pages/{page_id}": {
      "patch": {
