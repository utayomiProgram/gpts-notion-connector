        "security": [
          {
            "apiKey": []
          }
        ]
      },
      "patch": {
        "summary": "指定したブロックを削除（アーカイブ）します。",
        "operationId": "archiveBlockInGeneric",
        "tags": [
          "Blocks"
        ],
        "x-openai-isConsequential": false,
        "parameters": [
          {
            "name": "block_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
