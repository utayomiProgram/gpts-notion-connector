    "/fetch_all_pages": {
      "post": {
        "summary": "Notionデータベースからページを全件取得します。",
        "operationId": "fetchAllPagesFromGeneric",
        "tags": [
          "Databases"
        ],
        "x-openai-isConsequential": false,
        "servers": [
          {
            "url": "https://somutyo-notion-proxy.uguisuiro777.workers.dev"
          }
        ],
        "parameters": [
          {
            "name": "database_id",
            "in": "query",
            "description": "取得したいNotionデータベースのID",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "データベース内の全記事を返します。",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    },
                    "total": {
                      "type": "integer"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "パラメータが不足しています。",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "500": {
